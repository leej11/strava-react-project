const db = require("../db");

const getActivities = async (req, res) => {
  try {
    const result = await db.query(
      "SELECT * FROM activity WHERE totaldistance > 10000"
    );
    res.status(200).json(result.rows);
  } catch (err) {
    console.error(err);
    res.status(500).send("Internal Server Error");
  }
};
